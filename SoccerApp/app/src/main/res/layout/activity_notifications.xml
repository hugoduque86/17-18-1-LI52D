<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pt.isel.pdm.li52d.a1718i.soccerapp.view.NotificationActivity">


    <EditText
        android:id="@+id/notificationText"
        android:layout_width="134dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/showToast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/show_toast"
        app:layout_constraintBaseline_toBaselineOf="@+id/notificationText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.588"
        app:layout_constraintStart_toEndOf="@+id/notificationText" />

    <Button
        android:id="@+id/showNotificationChannel1"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/show_notifications_ch1"
        app:layout_constraintEnd_toEndOf="@+id/showToast"
        app:layout_constraintTop_toBottomOf="@+id/showToast" />

    <Button
        android:id="@+id/showNotificationChannel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/show_notifications_ch2"
        app:layout_constraintEnd_toEndOf="@+id/showNotificationChannel1"
        app:layout_constraintTop_toBottomOf="@+id/showNotificationChannel1" />

</android.support.constraint.ConstraintLayout>
